<%= form_for [:admin, @user] do |f| %>
  <div class="form-check form-switch mb-3">
    <%= f.label :active, class: 'form-check-label' %>
    <%= f.check_box :active, class: 'form-check-input' %>
  </div>

  <div class="mb-3 row">
    <%= f.label :role, class: 'col-sm-2 control-label' %>
    <%= f.hidden_field :role %>
    <div class="col-sm-10">
      <%= f.select :role, options_for_select(Role.all, selected: f.object.role), {include_blank: I18n.t('helpers.select.prompt'), prompt: true}, class: 'form-control' %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", autofocus: true, required: 'required' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :surname, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :surname, class: "form-control", required: 'required' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control", required: 'required' %>
    </div>
  </div>

  <hr>


  <p><%= f.label :reset_password_sent_at, class: 'control-label' %>:
      <%=  I18n.localize(f.object.reset_password_sent_at, format: :date_time) rescue 'n.d.' %></p>


    <p class="form-control-static"><%= f.label :last_sign_in_at, class: 'control-label' %>:
      <%= I18n.localize(f.object.last_sign_in_at, format: :date_time) rescue 'n.d.' %></p>

    <p class="form-control-static"><%= f.label :created_at, class: 'control-label' %>:
      <%=I18n.localize(f.object.created_at, format: :date_time) rescue 'n.d.' %></p>

  <p><%= f.label :updated_at, class: 'control-label' %>:
      <%= I18n.localize(f.object.updated_at, format: :date_time) rescue 'n.d.' %></p>

  <div class="form-group mb-2">
    <div class="d-flex">
      <%= button_tag type: 'submit', class: 'btn btn-primary me-5' do %>
        <span>Salva</span>
      <% end %>
      <%= button_tag type: 'reset',  class: 'btn btn-outline-primary' do %>
        <span>Reset</span>
      <% end %>
    </div>
  </div>

<% end %>
