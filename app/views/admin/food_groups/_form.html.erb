<%= form_for [:admin, @food_group] do |f| %>
  <div class="mb-3 row">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :group_name, class: "form-control", autofocus: true, required: 'required' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", required: 'required' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :code, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :code, class: "form-control", required: 'required' %>
    </div>
  </div>

  <hr>
    <p class="form-control-static"><%= f.label :created_at, class: 'control-label' %>:
      <%=I18n.localize(f.object.created_at, format: :date_time) rescue 'n.d.' %></p>

  <p><%= f.label :updated_at, class: 'control-label' %>:
      <%= I18n.localize(f.object.updated_at, format: :date_time) rescue 'n.d.' %></p>

  <div class="form-group mb-2">
    <div class="d-flex">
      <%= button_tag type: 'submit', class: 'btn btn-primary me-5' do %>
        <span>Salva</span>
      <% end %>
      <%= button_tag type: 'reset',  class: 'btn btn-outline-primary' do %>
        <span>Reset</span>
      <% end %>
    </div>
  </div>

<% end %>
